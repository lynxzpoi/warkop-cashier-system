generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WarkopData {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  contact     String
}

model cashier {
  id           Int     @id @default(autoincrement())
  name         String
  address      String
  contact      String
  email        String
  password     String
}

enum Type {
  Food
  Drink
  Snack
  Other
}

model Menu {
  id           Int              @id @default(autoincrement())
  name         String
  type         Type
  price        Int
  stock        Int
  transactions Transaction[]
  
  @@unique([name, price])
}

model Transaction {
  id              Int              @id @default(autoincrement())
  invoice         Invoice          @relation(fields: [invoiceId], references: [id])
  invoiceId       Int
  menu            Menu             @relation(fields: [menuId], references: [id])
  menuId          Int
  quantity        Int
  total           Int
  cashier         String
  createdAt       DateTime         @default(now())

  @@index([invoiceId], name: "invoiceId")
}

model Invoice {
  id              Int                @id @default(autoincrement())
  cashier         String
  total           Int
  transactions    Transaction[]
  createdAt       DateTime         @default(now())
}
